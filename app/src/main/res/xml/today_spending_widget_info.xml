<?xml version="1.0" encoding="utf-8"?>
<!--
    Widget configuration for Today's Spending Widget (Small, 2x1).

    This widget displays the total spending for today in a compact format.
    Size: 2 cells wide x 1 cell tall (approximately 110dp x 40dp minimum)

    Update mechanism:
    - updatePeriodMillis is set to 30 minutes (1800000ms)
    - Actual updates are managed by WorkManager for better battery efficiency
    - The system may update less frequently to conserve battery

    See: TodaySpendingWidget, TodaySpendingWidgetReceiver
-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="110dp"
    android:minHeight="40dp"
    android:targetCellWidth="2"
    android:targetCellHeight="1"
    android:updatePeriodMillis="1800000"
    android:previewImage="@drawable/widget_preview_today_spending"
    android:description="@string/widget_today_spending_description"
    android:widgetCategory="home_screen"
    android:resizeMode="none" />
