<?xml version="1.0" encoding="utf-8"?>
<!--
    FileProvider paths configuration for secure file sharing.

    This configuration defines which directories can be shared via FileProvider URIs.
    Used for sharing exported transaction files (CSV, PDF) to other apps via Android share sheet.

    Path types:
    - files-path: maps to Context.getFilesDir()
    - cache-path: maps to Context.getCacheDir()
    - external-path: maps to Environment.getExternalStorageDirectory()
    - external-files-path: maps to Context.getExternalFilesDir()
    - external-cache-path: maps to Context.getExternalCacheDir()

    Security:
    - Only paths defined here can be shared via FileProvider
    - Files are shared as content:// URIs, not file:// URIs
    - Temporary read/write permissions granted via intent flags
-->
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Export files path: Context.filesDir/exports/
        Used for CSV and PDF exports generated by ExportRepository
        Shared via Android share sheet for sending to other apps
    -->
    <files-path
        name="exports"
        path="exports/" />
</paths>
