<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SMS Permission for reading bank transaction messages -->
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- Declare telephony feature as optional for ChromeOS/tablet compatibility -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kanakku">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Kanakku">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Intent filters for widget navigation -->

            <!-- Widget action: Open Transactions screen -->
            <intent-filter>
                <action android:name="com.example.kanakku.OPEN_TRANSACTIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Widget action: Open Analytics screen -->
            <intent-filter>
                <action android:name="com.example.kanakku.OPEN_ANALYTICS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Widget action: Open Categories screen -->
            <intent-filter>
                <action android:name="com.example.kanakku.OPEN_CATEGORIES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Widget Configuration Activity -->

        <!-- Budget Widget Configuration Activity -->
        <activity
            android:name=".widget.config.BudgetWidgetConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.Kanakku">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Widget Receivers -->

        <!-- Small Widget: Today's Spending (2x1) -->
        <receiver
            android:name=".widget.TodaySpendingWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/today_spending_widget_info" />
        </receiver>

        <!-- Medium Widget: Budget Progress (3x2) -->
        <receiver
            android:name=".widget.BudgetProgressWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/budget_progress_widget_info" />
        </receiver>

        <!-- Large Widget: Recent Transactions (4x3) -->
        <receiver
            android:name=".widget.RecentTransactionsWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_transactions_widget_info" />
        </receiver>
    </application>

</manifest>