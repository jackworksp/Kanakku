<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
        OFFLINE-FIRST ARCHITECTURE:
        This app is intentionally designed to work 100% offline.
        NO INTERNET PERMISSION is requested to ensure:
        - All data stays on the user's device (privacy-first)
        - App functions fully without network connectivity
        - No accidental network dependencies can be introduced

        DO NOT add android.permission.INTERNET to this manifest.
    -->

    <!-- SMS Permission for reading bank transaction messages (local-only operation) -->
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- SMS Permission for receiving real-time bank transaction broadcasts (local-only operation) -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <!-- Notification Permission for displaying transaction alerts on Android 13+ (API 33) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Declare telephony feature as optional for ChromeOS/tablet compatibility -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kanakku">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Kanakku">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SMS Broadcast Receiver for real-time bank transaction detection -->
        <receiver
            android:name=".receiver.SmsBroadcastReceiver"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>